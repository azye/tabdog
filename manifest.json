{
  "manifest_version": 3,
  "name": "TabStash",
  "version": "1.0",
  "description": "Save and organize your browser tabs with smart session management",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_title": "TabStash"
  },
  "commands": {
    "save-all-tabs": {
      "suggested_key": {
        "default": "Alt+Shift+S"
      },
      "description": "Save & Close All Tabs"
    },
    "save-except-current": {
      "suggested_key": {
        "default": "Alt+Shift+F"
      },
      "description": "Save & Close All Except Current"
    },
    "open-manager": {
      "suggested_key": {
        "default": "Alt+Shift+M"
      },
      "description": "Open Tab Manager"
    },
    "save-current-tab": {
      "suggested_key": {
        "default": "Alt+Shift+G"
      },
      "description": "Save & Close Current Tab"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "homepage_url": "https://github.com/azye/tabstash",
  "author": "AZYE"
}